datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  idUser   String    @unique @default(uuid())
  name     String
  email    String    @unique
  password String
  telefone String?
  endereco String?
  veiculos Veiculo[]
}

model Veiculo {
  id            Int         @id @default(autoincrement())
  placa         String      @unique
  tipoVeiculoId Int
  TipoVeiculo   TipoVeiculo @relation(fields: [tipoVeiculoId], references: [id])
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  servicos      Agenda[]
}

model Servico {
  id           Int                @id @default(autoincrement())
  nome         String
  descricao    String?
  servicoValor ServicoMetadados[]
  agendaId     String
  agendas      Agenda[]
}

model Agenda {
  id         String    @id @default(uuid())
  dataInicio DateTime  @unique
  dataFim    DateTime
  servicos   Servico[]
  veiculoId  Int
  veiculo    Veiculo   @relation(fields: [veiculoId], references: [id])

  @@map("veiculos_servicos")
}

model ServicoMetadados {
  id             Int         @id @default(autoincrement())
  valor          Float
  tempo          Int
  tipoVeiculoId  Int
  servicoValorId Int
  servico        Servico     @relation(fields: [servicoValorId], references: [id])
  tipoVeiculo    TipoVeiculo @relation(fields: [tipoVeiculoId], references: [id])
}

model TipoVeiculo {
  id           Int                @id @default(autoincrement())
  nome         TiposVeiculosEnum  @unique
  veiculo      Veiculo[]
  servicoValor ServicoMetadados[]
}

enum TiposVeiculosEnum {
  carro
  moto
  caminhao
  onibus
  van
  buggy
}
