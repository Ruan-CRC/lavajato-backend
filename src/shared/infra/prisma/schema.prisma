datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  idUser       String    @unique @default(uuid())
  name      String
  email     String    @unique
  password  String
  telefone  String?
  endereco  String?
  veiculos  Veiculo[]
}

model Veiculo {
  id        Int               @id @default(autoincrement())
  placa     String            @unique
  tipo      TiposVeiculos
  userId    Int
  user      User              @relation(fields: [userId], references: [id])
  servicos  VeiculoServico[]
}

model Servico {
  id        Int               @id @default(autoincrement())
  nome      String
  descricao String?
  valor     Float
  veiculos  VeiculoServico[]
}

model VeiculoServico {
  veiculoId   Int
  servicoId   Int
  veiculo     Veiculo    @relation(fields: [veiculoId], references: [id])
  servico     Servico    @relation(fields: [servicoId], references: [id])
  dataInicio  DateTime
  dataFim     DateTime

  @@id([veiculoId, servicoId, dataInicio])
}

enum TiposVeiculos {
  carro
  moto
  caminhao
  onibus
  van
  buggy
}